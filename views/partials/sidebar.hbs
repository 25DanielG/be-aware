                        </svg>
                    </div>
                    <div class="label">
                        <span>Add</span>
                    </div>
                </a>
                <div class="divider"></div>
                <span class="subtext">Background</span>
                <div class="background-container">
                    <a class="background-link null">
                        <div class="icon">
                            <img src="/img/null.png" />
                        </div>
                    </a>
                    <a class="background-link">
                        <div class="icon">
                            <img src="/img/unsplash1-downsized.jpeg" />
                        </div>
                    </a>
                    <a class="background-link">
                        <div class="icon">
                            <img src="/img/unsplash2-downsized.jpeg" />
                        </div>
                    </a>
                    <a class="background-link">
                        <div class="icon">
                            <img src="/img/unsplash3-downsized.jpeg" />
                        </div>
                    </a>
                    <a class="background-link">
                        <div class="icon">
                            <img src="/img/unsplash4-downsized.jpeg" />
                        </div>
                    </a>
                    <a class="background-link">
                        <div class="icon">
                            <img src="/img/unsplash5-downsized.jpeg" />
                        </div>
                    </a>
                </div>
                <div class="divider"></div>
                <span class="subtext">Calendar</span>
                <div class="calendar-container">
                    <div class="calendar">
                        {{!--
                        <div class="day">S</div>
                        <div class="day">M</div>
                        <div class="day">T</div>
                        <div class="day">W</div>
                        <div class="day">T</div>
                        <div class="day">F</div>
                        <div class="day today active">S</div>
                        --}}
                    </div>
                </div>
                {{/if}}
                {{#if (not journal)}}
                <div class="divider"></div>
                <span class="subtext">View</span>
                <a class="nav-link active day">
                    <div class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-calendar-day" viewBox="0 0 16 16">
